{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    {% if not vanio_user.email_only %}<p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>{% endif %}
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
{% endblock %}

{% block links %}
    <p class="profile-links">
        <a class="btn btn-primary" href="{{ path('fos_user_profile_edit') }}">{{ 'profile.show.edit'|trans }}</a>
        <a class="btn" href="{{ path('fos_user_change_password') }}">{{ 'profile.show.change_password'|trans }}</a>
    </p>
{% endblock %}
